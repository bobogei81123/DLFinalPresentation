digraph finite_state_machine {
    bgcolor="#00000000";
	rankdir=LR;
	size="8,5"
	node [shape = doublecircle] v3 v4; 
	node [shape = circle];
    v0 [fillcolor="yellow" style=filled];
    v0 -> v1 [ label = "a" ];
    v0 -> v2 [ label = "b" ];
    v1 -> v3 [ label = "a" ];
    v1 -> v4 [ label = "b" ];
    v2 -> v3 [ label = "a" ];
    v2 -> v4 [ label = "b" ];
    v3 -> v4 [ label = "c" ];
    v4 -> v3 [ label = "d" ];
} 

